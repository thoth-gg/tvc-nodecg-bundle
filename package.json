    "@types/react": "*",
    "@types/react-dom": "*",
    "atem-connection": "^3.5.0",
    "dayjs": "^1.11.12",
    "p5": "^1.9.4",
    "react": "*",
    "react-dom": "*",
    "stats.js": "^0.17.0",
    "ts-node": "*"
  },
  "devDependencies": {
    "@nodecg/types": "^2.1.12",
    "@parcel/config-default": "*",
    "@parcel/core": "*",
    "@parcel/reporter-cli": "*",
    "@parcel/validator-typescript": "*",
    "@types/node": "^20",
    "@types/p5": "^1.7.6",
    "@types/stats.js": "^0.17.3",
    "concurrently": "*",
    "glob": "^11.0.0",
    "nodemon": "*",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "trash-cli": "*",
